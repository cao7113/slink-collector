{
  "manifest_version": 3,
  "name": "Slink Collector",
  "version": "1.0.0",
  "description": "A Chrome extension to collect URLs",
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Run action on the current page."
    },
    "collect": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "collect command"
    }
  }
}
